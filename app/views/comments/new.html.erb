<% provide :headeractiveclass, "contactus" %>
<div class="container after-navbar">
        <div class="row row-content">
            <h1> Get in touch</h1>
            <div class="col-xs-12 col-sm-3 col-sm-push-9">
                Feel free to write to us at <%= mail_to "info@shutuplegs.in" %>
            </div>
            <div class="col-xs-12 col-sm-9 col-sm-pull-3">
            	<%= form_for(@comment) do |f| %>
            	<%= render 'shared/error_messages' %>
                <div class = "row row-content">
                    <div class="col-xs-3 text-right"><%= f.label :name, class: 'required' %></div>
                    <div class="col-xs-7"><%= f.text_field :name, :required => true, class: 'form-group' %></div>
            	</div>
                <div class = "row row-content">
            		<div class="col-xs-3 text-right"><%= f.label :email, class: 'required' %></div>
            		<div class="col-xs-7"><%= f.email_field :email, :required => true, class: 'form-group' %></div>
            	</div>
                <div class = "row row-content">
            		<div class="col-xs-3 text-right"><%= f.label :subject, class: 'required' %></div>
            		<div class="col-xs-7"><%= f.text_field :subject, :required => true, class: 'form-group' %></div>
            	</div>
                <div class = "row row-content">
            		<div class="col-xs-3 text-right"><%= f.label :message, class: 'required' %></div>
            		<div class="col-xs-7"><%= f.text_area :message, :required => true, size: "50x7", class: 'form-group' %></div>
            	</div>
                <div class = "row row-content">
                    <div class="col-xs-12 text-center">
                        <br>
                <%= f.submit "Submit", class: "btn btn-primary" %>
            </div>
        </div>
                <% end %>
            </div>
        </div>
        <p style="padding:20px;"></p>        
</div>
